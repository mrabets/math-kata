<% unless current_user.liked? comment %>
  <%= link_to like_task_comment_path(@task, comment), { method: :put, remote: true, style: "text-decoration: none; color: inherit;" } do %>
    <i class="far fa-thumbs-up"></i>
  <% end %>
<% else %>
  <%= link_to unlike_task_comment_path(@task, comment), { method: :put, remote: true, style: "text-decoration: none; color: inherit;" } do %>
    <i class="fas fa-thumbs-up"></i>
  <% end %>
<% end %>

<%= comment.weighted_score %>

<% unless current_user.disliked? comment %>
  <%= link_to dislike_task_comment_path(@task, comment), { method: :put, remote: true, style: "text-decoration: none; color: inherit;" } do %>
    <i class="far fa-thumbs-down"></i>
  <% end %>
<% else %>
  <%= link_to undislike_task_comment_path(@task, comment), { method: :put, remote: true, style: "text-decoration: none; color: inherit;" } do %>
    <i class="fas fa-thumbs-down"></i>
  <% end %> 
<% end %>