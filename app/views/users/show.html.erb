<div class="card-body"><div class="d-flex flex-column align-items-center text-center">
 <img src="<%= @user.image %>" width="150" style="border-radius: 100px;">
  <div class="mt-3">
    <h4><%= @user.name %></h4>
    <p class="text-secondary mb-1"><%= t('users.number_of_solved_tasks') %>: <%= @user.solved_tasks.count %></p>
    <p class="text-muted font-size-sm"><%= t('users.number_of_created_tasks') %>: <%= @user.tasks.size %></p> 
    
    <% if current_user == @user %><br><br> 

      <h2><%= t('tasks.your_created_tasks') %></h2><br>

      <%= render 'users/search_task_form' %>

      <table class="table">
        <thead>
          <tr>
            <th scope="col"><%= sort_link(@q, :id, '#') %></th>
            <th scope="col"><%= sort_link(@q, :title, 'Title') %></th>
            <th scope="col"><%= sort_link(@q, :subject, 'Subject') %></th>
            <th scope="col"><%= sort_link(@q, :created_at, 'Date of creation') %></th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
            <% @tasks.each do |task| %>
            <tr>
              <th scope="row"><%= task.id %></th>
              <td><%= task.title %></td>
              <td><%= task.subject %></td>
              <td><%= task.created_at.strftime("%d %b %Y, %H:%M") %></td>
              <td>
                <%= link_to "View", task, class: 'link-info' %>
                <%= link_to 'Edit', edit_task_path(task), class: 'link-warning' %>
                <%= link_to 'Delete', task_path(task), method: :delete, data: {confirm: "Are you sure?"}, class: "link-danger" %>   
              </td>
            </tr>
            <% end %>
        </tbody>
      </table>

      <% if @tasks.blank? %>
        <p>Data is empty</p>
      <% end %>
    <% end %>
  </div>
</div>
