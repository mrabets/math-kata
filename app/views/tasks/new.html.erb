<%= form_with model: @task do |form| %>
	<%= form.label :title %><br>
	<%= form.text_field :title %><br>

	<%= form.label :condition %><br>
	<%= form.text_area :condition %><br>

	<%= form.fields_for :tags do |tag_subform| %>
		<%= tag_subform.label :name, "Tags" %><br>
		<%= tag_subform.text_field :name %><br>
	<% end %>

	<%= form.label :images %><br>
   	<%= form.file_field :images, multiple: true %><br>

	<br>
	<%= form.submit "Add Task" %>
<% end %>