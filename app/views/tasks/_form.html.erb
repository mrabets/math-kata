<div class="col-md-7 col-lg-8">
<%= form_with model: @task do |form| %>
<div class="form-group">
  <%= render 'shared/error_messages' %>

  <div class="col-md-8">
    <%= form.label t('tasks.title'), class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %><br>

    <%= form.label t('tasks.condition'), class: 'form-label' %><br>
    <%= form.rich_text_area :condition %><br>

    <%= form.label t('tasks.answers'), class: 'form-label' %>
    <%= form.text_field :answers, class: 'form-control' %>
    <small class="text-muted"><%= t('tasks.seperate_the_answers_by') %></small>
  </div><br>

  <div class="col-md-3">
    <%= form.label t('tasks.subject'), class: 'form-label' %>
    <%= form.select :subject, options_for_select(Subject.all.map(&:name)), { include_blank: true }, class: "form-select" %><br>

    <%= form.fields_for :tags do |tag_subform| %>
      <%= tag_subform.label :name, t('tasks.tags'), class: 'form-label' %>
      <%= tag_subform.text_field :name, class: 'form-control' %>
      <small class="text-muted"><%= t('tasks.seperate_the_tags_by') %></small>
    <% end %>
  </div><br>

  <br>
  <%= form.submit t('tasks.add_task'), class: 'btn btn-primary' %>
</div>
<% end %>
</div>