<div class="form-group">
  <div class="col-md-3">
      <%= form_tag tasks_path, method: :get, role: 'search', remote: false do %>
        
        <div class="input-group">
          <%= text_field_tag :query, params[:query], placeholder: "Enter search term", class: 'form-control' %><br>

          <%= button_tag(type: "submit", class: "btn btn-primary") do %>
              <i class="fas fa-search"></i>
          <% end %>
        </div><br>
        
        <%= link_to "Show All", tasks_path, class: "btn btn-warning btn-sm" %>
      <% end %>
  </div>
</div><br>  